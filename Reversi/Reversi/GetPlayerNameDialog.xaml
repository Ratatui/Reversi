<Window x:Class="Napoleon_Exile.GetPlayerNameDialog"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="Введите имя"
		Height="150"
		Width="300"
		ResizeMode="NoResize"
		Icon="icon.ico">
	<Grid>
		<StackPanel HorizontalAlignment="Center">
			<StackPanel Orientation="Horizontal"
						Margin="10">
				<Label Content="Имя:"
					   Margin="10" />
				<TextBox Text=""
						 x:Name="playername"
						 Width="150"
						 Margin="10" />
			</StackPanel>
			<Button Content="OK"
					Click="Button_Click"
					Width="150"
					Height="40" />
		</StackPanel>
	</Grid>
</Window>
